<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Angular ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/scripts")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Angular ASP.NET", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Users", "Index", "Users")
                    </li>
                    <li>
                        @Html.ActionLink("Applications", "Index", "Applications")
                    </li>
                    <li>
                        <a href="red">red</a>
                    </li>
                    <li ng-show="loggedIn">
                        <a href="" ng-click="logout()">{{username}} | Sign Out</a>
                    </li>
                    <li ng-hide="loggedIn">
                        <a href="signin">Sign In</a>
                    </li>
                    <li ng-hide="loggedIn">
                        <a href="register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <script type="text/javascript">
        window.App = {
            version: '@Convert.ToBase64String(System.Text.Encoding.ASCII.GetBytes("2.0"))',
            rootPath: '@Url.Content("~")'
        }
    </script>
    @Scripts.Render("~/bundles/utility")
    @Scripts.Render("~/bundles/App")
    @RenderSection("scripts", required: false)

</body>
</html>